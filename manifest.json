{
    "manifest_version": 2,
    "name": "Put Email Here",
    "version": "1.0.0",
    "description": "This is a sample description",
    "short_name": "Put Email Here",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage",
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [],
            "js": [
                "events.js"
            ]
        }
    ],
    "browser_action": {
        "default_title": "Put Email Here",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/favicon-16x16.png",
            "32": "icons/favicon-32x32.png"
        }
    }
}